<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBFFFF"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_woeid"/>

    <EditText
        android:id="@+id/woeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/enter_name"
        android:layout_marginTop="20dp"
        android:background="#7FFF00"
        android:ems="10"
        android:inputType="textAutoComplete" />
    
    <TextView 
        android:id="@+id/weather_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7FFF00"
        android:textColor="#000000"
        android:layout_below="@+id/search_woeid"/>"

    <Button
        android:id="@+id/search_woeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/woeid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="searchWoeid"
        android:text="@string/submit_woeid"
        android:textColor="#000000" />
    
</RelativeLayout>
